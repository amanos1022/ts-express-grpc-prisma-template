{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["./src", "index.ts"]
}